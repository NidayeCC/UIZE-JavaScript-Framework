.`` {
	width: 100%;
}

.`heading` {
	position: relative;
	text-align: center;
	min-height: 17px;
}

.`heading` span {
	letter-spacing: 2px;
}

.`clearButton` {
	position: absolute;
	right: 2px;
	top: 2px;
}

.`body` {
	padding: 0 2px 2px 2px;
}

.`messages` {
	font-family: Courier;
	white-space: nowrap;
	font-size: 10px;
	color: #000;
	border: 1px solid #ddd;
	padding: 4px;
	height: 140px;
	overflow: auto;
}

