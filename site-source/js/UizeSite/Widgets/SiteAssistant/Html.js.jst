<%@
	required (
		'Uize.Url',
		'Uize.Widgets.BoxWithHeading.Widget',
		'UizeSite.Widgets.GetInvolved.Widget',
		'UizeSite.Widgets.ShareThis.Widget'
	);
	input ({title:'string'});
%>
<div id="<%. idPrefix %>" class="<%= this.rootNodeCssClasses () %>">
	<div class="<%= this.cssClass ('box') %>"><%=
		this.childHtml ({
			name:'getInvolvedBox',
			widgetClass:Uize.Widgets.BoxWithHeading.Widget,
			heading:'NEED HELP?',
			body:this.childHtml ({name:'getInvolved',widgetClass:UizeSite.Widgets.GetInvolved.Widget})
		})
	%></div>
	<div class="<%= this.cssClass ('box') %>"><%=
		this.childHtml ({
			name:'shareThisBox',
			widgetClass:Uize.Widgets.BoxWithHeading.Widget,
			heading:'SHARE THIS LINK...',
			body:this.childHtml ({name:'shareThis',widgetClass:UizeSite.Widgets.ShareThis.Widget})
		})
	%></div>
</div>

